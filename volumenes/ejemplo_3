### Aplicacion web con recarga automatica
# 3.1 - Crear proyecto web
mkdir -p ~/web-dev-project/{html,css,js}
cd ~/web-dev-project

# 3.2 - Crear index.html
cat > html/index.html << 'EOF'
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mi Aplicación Web</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <header>
        <h1>🚀 Mi Aplicación Web con Podman</h1>
        <p>Desarrollo con bind mounts - los cambios se ven instantáneamente!</p>
    </header>
    
    <main>
        <div class="container">
            <h2>Contador de Visitas</h2>
            <div id="counter">Cargando...</div>
            <button onclick="incrementCounter()">Incrementar</button>
            
            <h2>Información del Servidor</h2>
            <div id="server-info">
                <p><strong>Timestamp:</strong> <span id="timestamp"></span></p>
                <p><strong>User Agent:</strong> <span id="user-agent"></span></p>
            </div>
        </div>
    </main>
    
    <script src="/js/app.js"></script>
</body>
</html>
EOF

# 3.3 - Crear CSS
cat > css/styles.css << 'EOF'
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Arial', sans-serif;
    line-height: 1.6;
    color: #333;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 100vh;
}

header {
    background: rgba(255, 255, 255, 0.1);
    color: white;
    text-align: center;
    padding: 2rem;
    backdrop-filter: blur(10px);
}

.container {
    max-width: 800px;
    margin: 2rem auto;
    padding: 2rem;
    background: rgba(255, 255, 255, 0.95);
    border-radius: 15px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
}

#counter {
    font-size: 3rem;
    font-weight: bold;
    color: #667eea;
    text-align: center;
    margin: 1rem 0;
    padding: 1rem;
    background: #f8f9fa;
    border-radius: 10px;
}

button {
    display: block;
    margin: 1rem auto;
    padding: 1rem 2rem;
    background: #667eea;
    color: white;
    border: none;
    border-radius: 25px;
    font-size: 1.1rem;
    cursor: pointer;
    transition: background 0.3s;
}

button:hover {
    background: #764ba2;
}

#server-info {
    background: #f8f9fa;
    padding: 1rem;
    border-radius: 10px;
    margin-top: 2rem;
}

h2 {
    color: #667eea;
    margin-bottom: 1rem;
}
EOF

# 3.4 - Crear JavaScript
cat > js/app.js << 'EOF'
let counter = parseInt(localStorage.getItem('counter')) || 0;

function updateCounter() {
    document.getElementById('counter').textContent = counter;
    localStorage.setItem('counter', counter);
}

function incrementCounter() {
    counter++;
    updateCounter();
    
    // Animación simple
    const counterEl = document.getElementById('counter');
    counterEl.style.transform = 'scale(1.1)';
    setTimeout(() => {
        counterEl.style.transform = 'scale(1)';
    }, 200);
}

function updateServerInfo() {
    document.getElementById('timestamp').textContent = new Date().toLocaleString();
    document.getElementById('user-agent').textContent = navigator.userAgent.substring(0, 50) + '...';
}

// Inicializar cuando carga la página
document.addEventListener('DOMContentLoaded', function() {
    updateCounter();
    updateServerInfo();
    
    // Actualizar timestamp cada segundo
    setInterval(() => {
        document.getElementById('timestamp').textContent = new Date().toLocaleString();
    }, 1000);
});

console.log('🚀 Aplicación cargada con bind mounts!');
console.log('Modifica los archivos y recarga para ver cambios instantáneos');
EOF

# Ejecutar servidor web con bind mounts
podman run -d \
  --name web-dev \
  -p 8080:80 \
  -v ~/web-dev-project/html:/usr/share/nginx/html:Z \
  -v ~/web-dev-project/css:/usr/share/nginx/html/css:Z \
  -v ~/web-dev-project/js:/usr/share/nginx/html/js:Z \
  nginx:alpine

